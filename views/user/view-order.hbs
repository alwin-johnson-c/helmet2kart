{{#if order}}
<section class="hero-wrap hero-wrap-2" style="background-image: url('images/hb1.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
          <div class="col-md-9 ftco-animate mb-5 text-center">
          	<p class="breadcrumbs mb-0"><span class="mr-2"><a href="index.html">Home <i class="fa fa-chevron-right"></i></a></span> <span>Cart <i class="fa fa-chevron-right"></i></span></p>
            <h2 class="mb-0 bread">view-order</h2>
          </div>
        </div>
      </div>
    </section>

    <section>
    <div class="container">
        <div class="row">

    			<div class="table-wrap">
						<table class="table">
						  <thead class="thead-primary">
						    <tr>
						    <th>date</th>
						     <th>address</th>
                             <th>pincode</th>
						      <th>mobile</th>
						      {{!-- <th>qty</th> --}}
                              <th>amount</th>
						      <th>payment-method</th>
                  <th>Status</th>
                  <th>Product</th>
						 
						    </tr>
						  </thead>
						  <tbody>
                            {{#each order}}
						    <tr class="alert" role="alert">

                                <td>{{this.date}}</td>
                                <td>{{this.deliveryDetails.address}}</td>
                                 <td>{{this.deliveryDetails.pincode}}</td>
                                  <td>{{this.deliveryDetails.number}}</td>
                                  
                                  {{!-- //doubts in qty display --}}
                                  {{!-- {{#each this.products}}
                                   <td>{{this.quantity}}</td>
                                   {{/each}} --}}
                                    {{!-- <td>{{this.products.quantity}}</td> --}}
                                   <td>{{this.totalAmount}}</td>
                                   <td>{{this.paymentMethod}}</td>
                                    <td>{{this.status}}</td>
                                        <td>
                                <a href="/view-order-products/{{this._id}}" class="btn btn-primary">view-order-products</a>
                             </td>
                                  
                                    {{#if this.is_Cancelled}}
                        <td class="align-middle">
                            <p class="text-danger font-weight-bold">Cancelled Successfully</p>
                        </td>
                        {{else}}
                        {{#if this.is_delivered}}
                        <td class="align-middle">
                            <p class="font-weight-bold" style="color:green">Delivered Successfully</p>
                        </td>
                        

                        {{#if this.is_returned}}
                        <td class="align-middle">
                            <p class="text-warning font-weight-bold">Returned Successfully</p>
                        </td>
                        {{else}}
                        <td class="align-middle"><a href="/return-order/{{this._id}}"
                                class="btn btn-success ">Return</a></td>
                        {{/if}}  
                        

                        <td class="align-middle"><a href="/invoice/{{this._id}}"
                                class="btn btn-info font-weight-bold">Invoice</a></td> 

                        {{else}}
                      
                       

                       
                         <td class="align-middle"><a href="/cancel-order/{{this._id}}"
                                class="btn btn-primary font-weight-bold" onclick="deleteAlert(event)">Cancel</a></td>

                         
                        
                        {{/if}}
                        {{/if}}
						    	
						    	
						     
                              
						      
                          
				          
                         
						
                        



                           
						    </tr>
                            {{/each}}
						  </tbody>
						</table>
					</div>
          
    		</div>
    </div>
    {{else}}
 <div class="container">
         <h2><b>NO ORDRES YET</b></h2>
    <img style="width:100% ;height:500px ;" src="https://bakestudio.in/assets/images/cart/empty-cart.gif" alt="">
   
</div>
{{/if}}
    </div>
</section>

<script>
        function deleteAlert(event) {
            event.preventDefault();
            var link = event.currentTarget.href;
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to Cancel this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes,.!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Canceled!',
                        'Your Order has been Canceled.',
                        'success'
                    )
                    window.location = link;
                } else {
                    return false
                }
            })
        }
    </script>
