<section>
  <div class="container-fluid">
    <div class=" px-xl-5 pt-5">
      <div>
        <div class=" justify-content-end d-flex ">
          <div class=" ">
            <a href="/admin/add-product" class="btn btn-info">Add Products</a>
          </div>
          {{!-- <div class="px-3">
            <a href="/admin/product-offer" class="btn btn-info">Add Products Offer</a>
          </div> --}}
        </div>

        <div class="mt-3">
          <table id="productsTable" class="table text-center">
            <thead class="thead-light ">
              <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th class="scope">Stock</th>
                <th scope="col">view Details</th>
                <th scope="col">price</th>
                <th scope="col">image</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody class="align-middle">
              {{#each products}}
              <tr>
                <td class="align-middle">{{inc @index}}</td>
                <td class="align-middle">{{this.name}}</td>
                <td class="align-middle">{{this.category}}</td>
                <td class="align-middle">{{this.stock}}</td>
                
                <td class="align-middle"><a href="/admin/view-product-details/{{this._id}}"><i
 class="fa fa-eye" aria-hidden="true"></a></td>
      
                
                <td class="align-middle">{{this.price}}</td>
                <td class="align-middle"><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt="" srcset=""></td>
                <td class="align-middle text"><a href="/admin/edit-product/{{this._id}}" class="btn"><i class="fa fa-edit fa-2x text-dark"
                      ></i></a></td>
                <td class="align-middle"><a href="/admin/delete-product/{{this._id}}" class="btn"
                    onclick="return confirm('delete product {{this.name}}')"><i class="fa fa-trash-o fa-2x text-dark"
                      ></i>
                  </a></td>
                {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>