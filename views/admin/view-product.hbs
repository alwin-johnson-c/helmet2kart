{{!-- <section> --}}
    <div class="container mt-5" >
        <div class="row">
            <a href="/admin/add-product" class="btn btn-primary ml-auto">add product</a>
            

        
    
   <table class="table mt-5">        
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
       {{!-- <th scope="col">Brand</th> --}}
      <th scope="col">price</th>
        {{!-- <th scope="col"> actual price</th> --}}
      <th scope="col">Category</th>
      <th scope="col">stock</th>


      <th scope="col">img</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.name}}</td>
      {{!--
       <td>{{this.brand}}</td>
      // add category --}}

       <td>{{this.price}}</td>
        {{!-- <td>{{this.actualPrice}}</td> --}}
       <td>{{this.category}}</td>
        <td>{{this.stock}}</td>

      <td><img style="width: 50px; height:50px" src="/product-image/{{this._id}}1.jpg"></td> 
      <td>
        <a href="edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
         <a href="delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm(' you want to delete {{this .name}} ')">Delete</a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
</div>
</div>
           