                       <div id="salesREport" style="border: 1px solid black;">
                        <table class="table text-center" id="example">
                            <thead>
                                <tr>
                                    <th scope="col">No</th>
                                    <th scope="col">OrderID</th>
                                    <th scope="col" style="width: 200px;">Date</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Contact</th>
                                </tr>
                            </thead>
                            <tbody  >
                                {{#each allOrders}}
                                <tr>
                                    <th scope="row" class="fs-bold">{{inc @index}}</th>
                                    <td>{{this._id}}</td>
                                    <td style="width: 200px;">{{this.date}}</td>
                                    <td>{{this.deliveryDetails.fisrtName}} </td>
                                    <td>{{this.totalAmount}}</td>
                                    <td>{{this.paymentMethod}}</td>
                                    <td>{{this.status}}</td>
                                    <td>{{this.deliveryDetails.number}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

