


<section>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="card col-md-4 col-sm-12 p-3 p-md-5 border rounded" style="background-color: rgb(255, 255, 255);">
        <div>
          <h2 class="text-dark text-center mt-2">LOGIN</h2>
        </div>

    

        <form action="/admin/admin-login" method="post" id="login">
          {{#if loginErr}}
          <p class="error">{{loginErr}}</p>
          {{/if}}
          <div class="form-group">
            <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
          </div>

          <div class="d-flex justify-content-center mb-3">
            <button type="submit" class="btn btn-dark w-100 font-weight-bold" style="background-color: #14308e;">Submit</button>
          </div>
        </form>

        {{!-- <div class="group mb-4">
          <div class="item line"></div>
           Additional content can be added here based on your requirements 
        </div> --}}
      </div>
    </div>
  </div>
</section>
